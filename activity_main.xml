<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions. -->
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@layout/background" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal|top">

            <us.steveboyer.sdremote.mButton
                android:layout_width="@dimen/remote_button_width"
                android:layout_height="@dimen/remote_button_height"
                android:text="@string/text_button_1"
                android:id="@+id/button1"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textSize="42dp"
                android:onClick="onClick"/>

            <us.steveboyer.sdremote.mButton
                android:layout_width="@dimen/remote_button_width"
                android:layout_height="@dimen/remote_button_height"
                android:text="2"
                android:id="@+id/button2"
                android:layout_alignBottom="@+id/button1"
                android:layout_toEndOf="@+id/button1"
                android:textSize="42dp"
                android:onClick="onClick"/>

            <us.steveboyer.sdremote.mButton
                android:layout_width="@dimen/remote_button_width"
                android:layout_height="@dimen/remote_button_height"
                android:text="3"
                android:id="@+id/button3"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/button2"
                android:textSize="42dp"
                android:onClick="onClick"/>

            <us.steveboyer.sdremote.mButton
                android:layout_width="@dimen/remote_button_width"
                android:layout_height="@dimen/remote_button_height"
                android:text="4"
                android:id="@+id/button4"
                android:layout_below="@+id/button1"
                android:layout_alignParentStart="true"
                android:textSize="42dp"
                android:onClick="onClick"/>

            <us.steveboyer.sdremote.mButton
                android:layout_width="@dimen/remote_button_width"
                android:layout_height="@dimen/remote_button_height"
                android:text="5"
                android:id="@+id/button5"
                android:layout_below="@+id/button1"
                android:layout_toEndOf="@+id/button1"
                android:textSize="42dp"
                android:onClick="onClick"/>

            <us.steveboyer.sdremote.mButton
                android:layout_width="@dimen/remote_button_width"
                android:layout_height="@dimen/remote_button_height"
                android:text="6"
                android:id="@+id/button6"
                android:layout_below="@+id/button2"
                android:layout_toEndOf="@+id/button2"
                android:textSize="42dp"
                android:onClick="onClick"/>

            <us.steveboyer.sdremote.mButton
                android:layout_width="@dimen/remote_button_width"
                android:layout_height="@dimen/remote_button_height"
                android:text="7"
                android:id="@+id/button7"
                android:layout_below="@+id/button5"
                android:layout_alignParentStart="true"
                android:textSize="42dp"
                android:onClick="onClick"/>

            <us.steveboyer.sdremote.mButton
                android:layout_width="@dimen/remote_button_width"
                android:layout_height="@dimen/remote_button_height"
                android:text="8"
                android:id="@+id/button8"
                android:layout_toEndOf="@+id/button4"
                android:layout_below="@+id/button4"
                android:textSize="42dp"
                android:onClick="onClick"/>

            <us.steveboyer.sdremote.mButton
                android:layout_width="@dimen/remote_button_width"
                android:layout_height="@dimen/remote_button_height"
                android:text="9"
                android:id="@+id/button9"
                android:layout_toEndOf="@+id/button2"
                android:layout_below="@+id/button6"
                android:layout_alignParentEnd="true"
                android:textSize="42dp"
                android:onClick="onClick"/>

            <us.steveboyer.sdremote.mButton
                android:layout_width="@dimen/remote_button_width"
                android:layout_height="@dimen/remote_button_height"
                android:text="0"
                android:id="@+id/button0"
                android:layout_toEndOf="@+id/button1"
                android:layout_below="@+id/button8"
                android:textSize="42dp"
                android:onClick="onClick"/>

            <us.steveboyer.sdremote.mButton
                android:layout_width="@dimen/remote_button_width"
                android:layout_height="@dimen/remote_button_height"
                android:text="Chan +"
                android:id="@+id/button_chanp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button8"
                android:textSize="30dp"
                android:onClick="onClick"/>

            <us.steveboyer.sdremote.mButton
                android:layout_width="@dimen/remote_button_width"
                android:layout_height="@dimen/remote_button_height"
                android:text="Chan -"
                android:id="@+id/button_chanm"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button_chanp"
                android:textSize="30dp"
                android:onClick="onClick"/>

            <us.steveboyer.sdremote.mButton
                android:layout_width="@dimen/remote_button_width"
                android:layout_height="@dimen/remote_button_height"
                android:text="Favorites"
                android:id="@+id/button_favs"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button_chanm"
                android:textSize="23dp"
                android:onClick="onClick"/>

            <us.steveboyer.sdremote.mButton
                android:layout_width="@dimen/remote_button_width"
                android:layout_height="@dimen/remote_button_height"
                android:text="Vol +"
                android:id="@+id/button_volp"
                android:layout_toEndOf="@+id/button2"
                android:layout_below="@+id/button8"
                android:textSize="30dp"
                android:onClick="onClick"/>

            <us.steveboyer.sdremote.mButton
                android:layout_width="@dimen/remote_button_width"
                android:layout_height="@dimen/remote_button_height"
                android:text="Vol -"
                android:id="@+id/button_volm"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/button_volp"
                android:textSize="30dp"
                android:onClick="onClick"/>

            <us.steveboyer.sdremote.mButton
                android:layout_width="@dimen/remote_button_width"
                android:layout_height="@dimen/remote_button_height"
                android:text="Mute"
                android:id="@+id/button_mute"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/button_volm"
                android:textSize="30dp"
                android:onClick="onClick"/>


            <us.steveboyer.sdremote.mButton
                android:layout_width="@dimen/remote_button_width"
                android:layout_height="@dimen/remote_button_height"
                android:text="Power"
                android:id="@+id/button_power"
                android:layout_toRightOf="@+id/button7"
                android:layout_below="@+id/button0"
                android:textSize="30dp"
                android:onClick="onClick"/>

            <us.steveboyer.sdremote.mButton
                android:layout_width="@dimen/remote_button_width"
                android:layout_height="@dimen/remote_button_height"
                android:text="Source"
                android:id="@+id/button_source"
                android:layout_toRightOf="@+id/button7"
                android:layout_below="@+id/button_power"
                android:textSize="30dp"
                android:onClick="onClick"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="@dimen/remote_button_height"
                android:text="Record Mode"
                android:id="@+id/switch_record"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textColor="#FFFFFFFF" />

        </RelativeLayout>
    </FrameLayout>

    <!-- android:layout_gravity="start" tells DrawerLayout to treat
         this as a sliding drawer on the left side for left-to-right
         languages and on the right side for right-to-left languages.
         If you're not building against API 17 or higher, use
         android:layout_gravity="left" instead. -->
    <!-- The drawer is given a fixed width in dp and extends the full height of
         the container. -->
    <fragment android:id="@+id/navigation_drawer"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:name="us.steveboyer.sdremote.NavigationDrawerFragment"
        tools:layout="@layout/fragment_navigation_drawer" />

</android.support.v4.widget.DrawerLayout>
